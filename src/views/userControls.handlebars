<h1 class="h1-userControl">Manejo de usuario</h1>

<section class="userControlContainer">
    <form class="form-register" action="/users" method="POST">
        <h2>Modificar el role del usuario</h2>
        <label for="userId">Enter User ID:</label>
        <input class="control-register" type="text" name="userId" id="userId" required>

        <label for="role">Role:</label>
        
        <select class="select" name="role" id="role">
            <option class="selectOption" value="user">User</option>
            <option class="selectOption" value="admin">Admin</option>
            <option class="selectOption" value="premium">Premium</option>
        </select>

        <!-- Agrega otros campos segÃºn sea necesario -->

        <input type="hidden" name="_method" value="PUT">
        <input class="boton-register" type="submit" value="Update Role" />
    </form>

    <form class="form-register" action="/users/delete" method="POST">
        <h2>Eliminar el usuario</h2>
        <label for="userIdDelete">Enter User ID:</label>
        <input class="control-register" type="text" name="userIdDelete" id="userIdDelete" required>

        <input type="hidden" name="_method" value="DELETE">
        <input class="boton-register" type="submit" value="Delete User">
    </form>
</section>

